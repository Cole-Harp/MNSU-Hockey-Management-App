generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id    String   @id 
  email String   @unique
  name  String?
  role UserRole @default(Player)
  messages Message[]

}


model Message {
  id String @id @default(uuid())
  body String
  createdAt DateTime @default(now())
  
  userId String
  users User? @relation(fields: [userId], references: [id])
  @@index([userId])
 
}

enum UserRole {   
Admin   
Coach   
Faculty   
Player 
}