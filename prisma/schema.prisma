datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  Admin
  Coach
  Faculty
  Player
}

model User {
  id            Int            @unique @default(autoincrement())
  clerkUserId   String         @id @unique
  email String  @unique
  name  String?
  role UserRole
  posts Post[]
}

model Post {
  id        String     @id @unique
  title     String
  content   String?
  date      DateTime
  time      DateTime
  published Boolean @default(false)
  author    User    @relation(fields: [id], references: [clerkUserId])
  authorId  String

  @@index([authorId])
}

model Event {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  date      DateTime
  start     DateTime
  end       DateTime
  published Boolean @default(false)
  role UserRole
  authorId  String

  @@index([authorId])
}