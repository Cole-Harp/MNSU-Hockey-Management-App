generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id    String   @id 
  email String   @unique
  name  String?
  role UserRole @default(Player)
  messages Message[]
  events Event[]

}

model Event {
  id          String    @id @default(uuid())
  title       String
  description String?
  start       DateTime?
  end         DateTime?
  role        UserRole
  authorEmail String
  allDay      Boolean?
  author      User      @relation(fields: [authorEmail], references: [email])

  @@index([authorEmail])
}

model Post {
  id        String   @id @unique
  title     String
  content   String?
  date      String
  time      String
  published Boolean  @default(false)
  authorId  String

  @@index([authorId])
}

model Message {
  id String @id @default(uuid())
  body String
  createdAt DateTime @default(now())
  
  userId String
  users User? @relation(fields: [userId], references: [id])
  @@index([userId])
 
}

enum UserRole {   
Admin   
Coach   
Faculty   
Player 
}