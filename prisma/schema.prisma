generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id            String         @id
  email         String?        @unique
  name          String?
  role          UserRole       @default(Player)
  events        Event[]
  conversations Conversation[]
}

model Conversation {
  id    String   @id 
  messages Message[]
  Users     User[]   
}

model Event {
  id              String    @id @default(uuid())
  title           String
  description     String?
  start           DateTime?
  end             DateTime?
  role            UserRole
  authorId        String
  allDay          Boolean?
  backgroundColor String?
  where           String?
  announcement    Boolean?
  author          User      @relation(fields: [authorId], references: [id])

  @@index([authorId])
}

model Message {
  id             String       @id @default(uuid())
  body           String
  createdAt      DateTime     @default(now())
  userId         String
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])

  @@index([conversationId])
}


enum UserRole {
  Admin
  Coach
  Faculty
  Player
}
