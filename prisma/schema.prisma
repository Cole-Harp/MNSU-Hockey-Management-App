generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id            String         @id
  email         String?         @unique
  name          String?
  role          UserRole       @default(Player)
  events        Event[]
  conversations Conversation[]
}

model Conversation {
   id String @id @default(uuid()) @unique
  users User []
  messages Message[]
}

model Event {
  id              String    @id @default(uuid())
  title           String
  where           String?
  description     String?
  backgroundColor String?
  start           DateTime?
  end             DateTime?
  role            UserRole
  authorId        String
  allDay          Boolean?
  announcement    Boolean?
  author          User      @relation(fields: [authorId], references: [id])

  @@index([authorId])
}

model Message {
  id        String   @id @default(uuid())
  body      String
  createdAt DateTime @default(now())
  userId    String
  createdBy String @default("")

  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])

  @@index([conversationId])
}

model Post {
  id        String  @id @unique
  title     String
  content   String?
  date      String
  time      String
  published Boolean @default(false)
  authorId  String

  @@index([authorId])
}

enum UserRole {
  Admin
  Coach
  Faculty
  Player
}