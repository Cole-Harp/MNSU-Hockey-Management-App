generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id    String   @id 
  email String   @unique
  name  String?
  role UserRole @default(Player)
  messages Message[]
  events Event[]
}

}

model Event {
  id          String     @id
  title       String
  description String?
  start       DateTime?
  end         DateTime?
  role        UserRole
  authorId String
  allDay      Boolean?
  author      User      @relation(fields: [authorId], references: [id])

  @@index([authorId])
}

model Message {
  id        String   @id @default(uuid())
  body      String
  createdAt DateTime @default(now())
  userId    String

  @@index([userId])
}

model Post {
  id        String  @id @unique
  title     String
  content   String?
  date      String
  time      String
  published Boolean @default(false)
  authorId  String

  @@index([authorId])
}

model User {
  id    String    @id
  email String    @unique
  name  String?
  role  User_role @default(Player)
}

enum User_role {
  Admin
  Coach
  Faculty
  Player
}

enum Event_role {
  Admin
  Coach
  Faculty
  Player
}
