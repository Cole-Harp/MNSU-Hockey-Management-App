generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id     String   @id @unique
  email  String   @unique
  name   String?
  role   UserRole @default(Player)
  events Event[]
}

model Post {
  id        String   @id @unique
  title     String
  content   String?
  date      DateTime
  time      DateTime
  published Boolean  @default(false)
  authorId  String

  @@index([authorId])
}

model Event {
  id          String    @id @default(uuid())
  title       String
  description String?
  start       DateTime?
  end         DateTime?
  role        UserRole
  authorEmail String
  allDay      Boolean?
  author      User      @relation(fields: [authorEmail], references: [email])

  @@index([authorEmail])
}

enum UserRole {
  Admin
  Coach
  Faculty
  Player
}
